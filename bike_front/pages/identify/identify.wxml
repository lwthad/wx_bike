<!--pages/identify/identify.wxml-->
<view class='page' xmlns:wx='http://www.w3.org/1999/xhtml'>
    <view class='page_bd'>
        <view class='state'>
            <view class='flag'>手机绑定</view>
            <view class='flag'>押金充值</view>
            <view class='flag tab'>实名认证</view>
            <view class='flag'>开始用车</view> 
        </view>
        <view class='pledgecont'></view>

        <form bindsubmit='formSubmit'>

          <view class='weui-cells'>
            <view class='weui-cell weui-cell_input weui-cell_vcode'>
               <view class='weui-cell_hd'>
                  <view class='weui-label'>身份证号码</view>
               </view>
               <view class='weui-cell_bd'>
                  <input class='weui-input' name='verifyCode' placeholder='请输入身份证号码'/>
               </view>
            </view>
          </view>

          <view class='weui-cells'>
            <view class='weui-cell weui-cell_input weui-cell_vcode'>
               <view class='weui-cell_hd'>
                  <view class='weui-label'>真实姓名</view>
               </view>
               <view class='weui-cell_bd'>
                  <input class='weui-input' name='verifyCode' placeholder='请输入真实姓名'/>
               </view>
            </view>
          </view>

          <view class='weui-btn-area'>
             <button class='weui-btn' type='primary' form-type='submit'>确定</button>
          </view>
        </form>

    </view>
</view>

